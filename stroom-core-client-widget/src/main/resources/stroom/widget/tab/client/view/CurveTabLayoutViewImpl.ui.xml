<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tab="urn:import:stroom.widget.tab.client.view">
    <g:FocusFlowPanel ui:field="layout" styleName="curveTabLayoutViewImpl-layout">
        <g:FlowPanel ui:field="tabBarContainer"  styleName="tabBarContainer">
            <g:Button ui:field="menu" styleName="navigation-menu-button focus-without-border"/>
            <g:SimplePanel ui:field="tabBarOuter"
                           styleName="curveTabLayoutViewImpl-tabBarOuter">
                <tab:CurveTabBar ui:field="tabBar"/>
            </g:SimplePanel>
        </g:FlowPanel>
        <g:SimplePanel ui:field="layerContainerOuter"
                       styleName="curveTabLayoutViewImpl-layerContainerOuter">
            <tab:LayerContainerImpl ui:field="layerContainer" styleName="stroom-main-content-container"/>
        </g:SimplePanel>
    </g:FocusFlowPanel>
</ui:UiBinder>
