<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .layout {
        width: 100%;
        text-align: right;
        padding-top: 5px;
        }

        .button {
        margin: 0;
        padding: 3px 5px;
        text-decoration: none;
        font-size: small;
        cursor: pointer;
        cursor: hand;
        background: blue;
        color: white;
        border: 1px outset #ccc;
        }
        .button:active {
        border: 1px inset #ccc;
        }
        .button:hover {
        border-color: #9cf #69e #69e #7af;
        }
        .button[disabled] {
        cursor: default;
        background-color: grey;
        color: white;
        }
        .button[disabled]:hover {
        cursor: default;
        background-color: grey;
        color: white;
        }


        .accept {
        background-color: green;
        <!--color: white;-->
        }

        .reject {
        margin-left: 5px;
        background-color: red;
        <!--color: white;-->
        }

        <!--.accept[disabled] {-->
        <!--cursor: default;-->
        <!--background-color: grey;-->
        <!--color: white;-->
        <!--}-->

        <!--.accept[disabled]:hover {-->
        <!--border: 1px outset #ccc;-->
        <!--}-->
    </ui:style>

    <g:VerticalPanel>
        <g:cell>
            <g:SimplePanel ui:field="content"/>
        </g:cell>
        <g:cell>
            <g:FlowPanel styleName="{style.layout}">
                <g:Button ui:field="accept" styleName="{style.button} {style.accept}" text="Accept"/>
                <g:Button ui:field="reject" styleName="{style.button} {style.reject}" text="Reject"/>
            </g:FlowPanel>
        </g:cell>
    </g:VerticalPanel>
</ui:UiBinder> 
