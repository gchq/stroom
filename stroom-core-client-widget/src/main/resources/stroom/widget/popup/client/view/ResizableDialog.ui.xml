<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:spinner="urn:import:stroom.widget.spinner.client">

    <g:FlowPanel styleName="dialog-container">
        <g:SimplePanel styleName="dialog-background-behind"/>
        <g:FlowPanel styleName="dialog-background">
            <g:FlowPanel styleName="dialog-titleBar">
                <g:SimplePanel ui:field="icon" styleName="dialog-icon" />
                <g:Label ui:field="titleText" styleName="dialog-titleText">Caption</g:Label>
                <g:SimplePanel styleName="dialog-spinner">
                    <spinner:SpinnerLarge ui:field="spinner"/>
                </g:SimplePanel>
            </g:FlowPanel>
            <g:SimplePanel ui:field="content" styleName="dialog-body"/>
        </g:FlowPanel>
        <g:SimplePanel ui:field="resizeN" styleName="resizableDialog-resize resizableDialog-resizeN"/>
        <g:SimplePanel ui:field="resizeE" styleName="resizableDialog-resize resizableDialog-resizeE"/>
        <g:SimplePanel ui:field="resizeS" styleName="resizableDialog-resize resizableDialog-resizeS"/>
        <g:SimplePanel ui:field="resizeW" styleName="resizableDialog-resize resizableDialog-resizeW"/>
        <g:SimplePanel ui:field="resizeNE" styleName="resizableDialog-resize resizableDialog-resizeNE"/>
        <g:SimplePanel ui:field="resizeNW" styleName="resizableDialog-resize resizableDialog-resizeNW"/>
        <g:SimplePanel ui:field="resizeSE" styleName="resizableDialog-resize resizableDialog-resizeSE"/>
        <g:SimplePanel ui:field="resizeSW" styleName="resizableDialog-resize resizableDialog-resizeSW"/>
    </g:FlowPanel>
</ui:UiBinder>
