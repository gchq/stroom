<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:stroom.widget.button.client">
    <g:FlowPanel styleName="max dock-container-vertical">
        <g:SimplePanel ui:field="content" styleName="dialog-content"/>
        <g:FlowPanel styleName="dialog-buttons dialog-buttons-right">
            <b:Button ui:field="accept"
                      addStyleNames="allow-focus resizableAcceptRejectContent-button resizableAcceptRejectContent-accept Button--contained-primary"
                      text="Accept"/>
            <b:Button ui:field="reject"
                      addStyleNames="allow-focus resizableAcceptRejectContent-button resizableAcceptRejectContent-reject Button--contained-secondary"
                      text="Reject"/>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
