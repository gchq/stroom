<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .top {
        width: 100%;
        height: 100%;
        border-bottom: 1px solid #c5cde2;
        background: white;
        }

        .bottom {
        width: 100%;
        height: 100%;
        border-top: 1px solid #c5cde2;
        background: white;
        }
    </ui:style>
    <g:MySplitLayoutPanel unit="PX" width="100%" height="100%" vSplits="0.5">
        <g:north size="200">
            <g:SimplePanel ui:field="table" styleName="{style.top}"/>
        </g:north>
        <g:center>
            <g:SimplePanel ui:field="expression" styleName="{style.bottom}"/>
        </g:center>
    </g:MySplitLayoutPanel>
</ui:UiBinder> 
