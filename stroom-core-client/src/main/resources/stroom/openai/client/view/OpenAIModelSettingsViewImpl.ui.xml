<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:b="urn:import:stroom.widget.button.client"
             xmlns:v="urn:import:stroom.widget.valuespinner.client">
    <g:FlowPanel styleName="max form-padding form">
        <form:FormGroup identity="openAIModelBaseUrl" label="Base URL (optional)">
            <g:TextBox ui:field="baseUrl" width="400px"
                       title="Override the URL for the vector embeddings endpoint. Example: https://model-server.example.com/v1"/>
        </form:FormGroup>
        <form:FormGroup identity="openAIModelApiKey" label="API Key (optional)">
            <g:TextBox ui:field="apiKey" width="400px"
                       title="Credential used to authenticate with the model server"/>
        </form:FormGroup>
        <form:FormGroup identity="openAIModelId" label="Model ID">
            <g:TextBox ui:field="modelId" width="400px"
                       title="ID of the model to use to generate embeddings. Example: intfloat/e5-mistral-7b-instruct"/>
        </form:FormGroup>
        <form:FormGroup identity="openAIMaxContextWindowTokens" label="Maximum context window tokens">
            <v:ValueSpinner ui:field="maxContextWindowTokens" width="80px"
                            title="Maximum number of tokens allowed in the model's context window. Set to zero to disable."/>
        </form:FormGroup>

        <b:Button ui:field="testModel" text="Test Model" width="200px" addStyleNames="allow-focus"/>
    </g:FlowPanel>
</ui:UiBinder>
