<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max form">
        <form:FormGroup identity="newPipelineReferenceElementId" label="Element Id">
            <g:Label ui:field="element" addStyleNames="stroom-control-label"/>
        </form:FormGroup>
        <form:FormGroup identity="newPipelineReferencePipeline" label="Pipeline">
            <g:SimplePanel ui:field="pipeline" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="newPipelineReferenceFeed" label="Feed">
            <g:SimplePanel ui:field="feed" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="newPipelineReferenceType" label="Type">
            <g:SimplePanel ui:field="type" addStyleNames="w-100"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder>

