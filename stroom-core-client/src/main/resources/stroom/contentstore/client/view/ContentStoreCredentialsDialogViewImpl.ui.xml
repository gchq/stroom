<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="content-store-credentials-dialog">
        <g:HTML ui:field="lblAuthContactHtml" />
        <form:FormGroup identity="username"
                        label="Username"
                        helpText="Username you've been given to access this content pack">
            <g:TextBox ui:field="txtUsername"/>
        </form:FormGroup>
        <form:FormGroup identity="password"
                        label="Password"
                        helpText="Password you've been given to access this content pack">
            <g:PasswordTextBox ui:field="pwdPassword"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder>
