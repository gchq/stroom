<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:button="urn:import:stroom.widget.button.client">
    <g:FlowPanel styleName="max form">
        <form:FormGroup identity="username"
                        label="User Name"
                        helpText="Enter a user name">
            <g:TextBox ui:field="username" addStyleNames="wide-control"/>
        </form:FormGroup>
        <form:FormGroup identity="password"
                        label="Password"
                        helpText="Enter a password">
            <g:FlowPanel>

                <!-- Add password text box -->
                <g:FlowPanel addStyleNames="passwordTextBoxOuter wide-control">
                    <g:PasswordTextBox ui:field="password" addStyleNames="confirmPasswordTextBox"/>
                    <g:FlowPanel addStyleNames="confirmPasswordTextBoxOverlay">
                        <button:InlineSvgButton ui:field="showPassword" addStyleNames="showPassword"/>
                    </g:FlowPanel>
                </g:FlowPanel>

            </g:FlowPanel>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder>
