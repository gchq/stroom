<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:button="urn:import:stroom.widget.button.client"
             xmlns:chk="urn:import:stroom.widget.tickbox.client.view">
    <g:FlowPanel styleName="max form">
        <form:FormGroup identity="passPhrase"
                        label="Private key pass phrase"
                        helpText="Secret phrase to unlock the private key">
            <g:FlowPanel>

                <!-- Add password text box -->
                <g:FlowPanel addStyleNames="passwordTextBoxOuter wide-control">
                    <g:PasswordTextBox ui:field="passPhrase" addStyleNames="confirmPasswordTextBox"/>
                    <g:FlowPanel addStyleNames="confirmPasswordTextBoxOverlay">
                        <button:InlineSvgButton ui:field="showPassPhrase" addStyleNames="showPassPhrase"/>
                    </g:FlowPanel>
                </g:FlowPanel>

            </g:FlowPanel>
        </form:FormGroup>
        <form:FormGroup identity="privateKey"
                        label="Private Key"
                        helpText="Private Key PEM encoded certificate">
            <g:TextArea ui:field="privateKey"/>
        </form:FormGroup>
        <form:FormGroup identity="verifyHosts"
                        label="Verify Hosts"
                        helpText="Do you want to verify hosts? Always verify in production to prevent man in the middle attacks.">
            <chk:CustomCheckBox ui:field="verifyHosts"/>
        </form:FormGroup>
        <form:FormGroup identity="knownHosts"
                        label="Known Hosts"
                        helpText="A list of known hosts for host verification. This is the same as entries you would find in a ~/.ssh/known_hosts file.">
            <g:TextArea ui:field="knownHosts"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder>
