<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:d="urn:import:stroom.widget.customdatebox.client"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:chk="urn:import:stroom.widget.tickbox.client.view">

    <g:FlowPanel styleName="credentials-details-dialog">
        <form:FormGroup identity="name"
                        label="Name"
                        ui:field="fmgName"
                        helpText="Name to identify these credentials">
            <g:TextBox ui:field="txtName"/>
        </form:FormGroup>
        <form:FormGroup identity="credsExpire"
                        label="Credentials expire"
                        ui:field="fmgCredsExpire"
                        helpText="Do the credentials expire?">
            <chk:CustomCheckBox ui:field="chkCredsExpire" identity="credsExpireChk"/>
        </form:FormGroup>
        <form:FormGroup identity="expires"
                        label="Expires"
                        ui:field="fmgExpires"
                        helpText="When do the credentials expire?">
            <d:MyDateBox ui:field="dtpExpires"/>
        </form:FormGroup>
        <form:FormGroup identity="type"
                        label="Type"
                        ui:field="fmgType"
                        helpText="Select the type of credentials">
            <g:ListBox ui:field="lstType"/>
        </form:FormGroup>
        <form:FormGroup identity="username"
                        label="Username"
                        ui:field="fmgUsername"
                        helpText="Username you've been given to access this content pack">
            <g:TextBox ui:field="txtUsername"/>
        </form:FormGroup>
        <form:FormGroup identity="password"
                        label="Password"
                        ui:field="fmgPassword"
                        helpText="Password you've been given to access this content pack">
            <g:PasswordTextBox ui:field="pwdPassword"/>
        </form:FormGroup>
        <form:FormGroup identity="accessToken"
                        label="Access token"
                        ui:field="fmgAccessToken"
                        helpText="Access token">
            <g:TextBox ui:field="txtAccessToken"/>
        </form:FormGroup>
        <form:FormGroup identity="passphrase"
                        label="Private key passphrase"
                        ui:field="fmgPassphrase"
                        helpText="Secret phrase to unlock the private key">
            <g:TextBox ui:field="txtPassphrase"/>
        </form:FormGroup>
        <form:FormGroup identity="privateKey"
                        label="Private Key"
                        ui:field="fmgPrivateKey"
                        helpText="Private key certificate">
            <g:TextArea ui:field="txtPrivateKey"/>
        </form:FormGroup>
        <form:FormGroup identity="serverPublicKey"
                        label="Server's Public Key"
                        ui:field="fmgServerPublicKey"
                        helpText="Public Key Certificate of the Server. If empty then all server keys will be accepted.">
            <g:TextArea ui:field="txtServerPublicKey"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder>
