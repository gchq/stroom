<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:p="urn:import:stroom.widget.button.client">
    <g:FlowPanel styleName="max form">
        <form:FormGroup identity="keyStoreType"
                        label="Key Store Type"
                        helpText="Choose the key store type, e.g. JKS, PKCS12">
            <l:SelectionBox ui:field="type"/>
        </form:FormGroup>
        <form:FormGroup identity="keyStorePassword"
                        label="Key Store Pass Phrase (optional)"
                        helpText="Enter a key store pass phrase to unlock the keystore if one is required">
            <g:FlowPanel>

                <!-- Add password text box -->
                <g:FlowPanel addStyleNames="passwordTextBoxOuter wide-control">
                    <g:PasswordTextBox ui:field="password" addStyleNames="confirmPasswordTextBox"/>
                    <g:FlowPanel addStyleNames="confirmPasswordTextBoxOverlay">
                        <p:InlineSvgButton ui:field="showPassword" addStyleNames="showPassword"/>
                    </g:FlowPanel>
                </g:FlowPanel>

            </g:FlowPanel>
        </form:FormGroup>
        <form:FormGroup identity="keyStoreFile"
                        label="Upload Key Store File"
                        helpText="Choose the key store file to upload"
                        addStyleNames="dock-min">
            <form:CustomFileUpload ui:field="fileUpload"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder>
