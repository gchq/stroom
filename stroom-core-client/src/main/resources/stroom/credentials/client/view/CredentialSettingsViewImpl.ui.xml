<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:chk="urn:import:stroom.widget.tickbox.client.view"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:datetimebox="urn:import:stroom.widget.datepicker.client">
    <g:FlowPanel styleName="credentials-details-dialog">
        <form:FormGroup identity="name"
                        label="Name"
                        helpText="Name to identify these credentials">
            <g:TextBox ui:field="name"/>
        </form:FormGroup>
        <form:FormGroup identity="credsExpire"
                        label="Credentials expire"
                        helpText="Do the credentials expire?">
            <chk:CustomCheckBox ui:field="credsExpire" identity="credsExpireChk"/>
        </form:FormGroup>
        <form:FormGroup identity="expires"
                        label="Expires"
                        ui:field="expiryTimeFormGroup"
                        helpText="When do the credentials expire?">
            <datetimebox:DateTimeBox ui:field="expiryTime" addStyleNames="wide-control"/>
        </form:FormGroup>
        <form:FormGroup identity="type"
                        label="Type"
                        helpText="Select the type of credentials">
            <l:SelectionBox ui:field="credentialType"/>
        </form:FormGroup>
        <form:FormGroup>
            <g:SimplePanel ui:field="secret"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder>
