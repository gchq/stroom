<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:FlowPanel styleName="max welcomeViewImpl-body">
        <g:SimplePanel ui:field="html"/>
            <g:Grid styleName="welcomeViewImpl-buildInfo stroom-control-grid w-100">
                <g:row>
                    <g:cell>User Unique Identity:</g:cell>
                    <g:customCell>
                        <g:Label ui:field="userIdentity"/>
                    </g:customCell>
                </g:row>
                <g:row>
                    <g:cell>User Display Name:</g:cell>
                    <g:customCell>
                        <g:Label ui:field="displayName"/>
                    </g:customCell>
                </g:row>
                <g:row>
                    <g:cell>User Full Name:</g:cell>
                    <g:customCell>
                        <g:Label ui:field="fullName"/>
                    </g:customCell>
                </g:row>
                <g:row>
                    <g:cell>Build Version:</g:cell>
                    <g:customCell>
                        <g:Label ui:field="buildVersion"/>
                    </g:customCell>
                </g:row>
                <g:row>
                    <g:cell>Build Date:</g:cell>
                    <g:customCell>
                        <g:Label ui:field="buildDate"/>
                    </g:customCell>
                </g:row>
                <g:row>
                    <g:cell>Up Date:</g:cell>
                    <g:customCell>
                        <g:Label ui:field="upDate"/>
                    </g:customCell>
                </g:row>
                <g:row>
                    <g:cell>Node Name:</g:cell>
                    <g:customCell>
                        <g:Label ui:field="nodeName"/>
                    </g:customCell>
                </g:row>

            </g:Grid>
    </g:FlowPanel>
</ui:UiBinder>
