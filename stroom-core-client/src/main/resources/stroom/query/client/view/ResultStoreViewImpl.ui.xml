<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:SimplePanel styleName="max">
        <g:MySplitLayoutPanel styleName="max">
            <g:north size="200">
                <g:SimplePanel ui:field="tableContainer"
                               styleName="max dashboard-panel overflow-hidden"/>
            </g:north>
            <g:center>
                <g:MaxScrollPanel addStyleNames="max dashboard-panel">
                    <g:SimplePanel ui:field="infoPanel"/>
                </g:MaxScrollPanel>
            </g:center>
        </g:MySplitLayoutPanel>
    </g:SimplePanel>
</ui:UiBinder>
