<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:stroom.widget.button.client"
             xmlns:sl="urn:import:stroom.item.client">

    <g:ThinSplitLayoutPanel styleName="QueryHelpViewImpl max">
        <g:north size="250">
            <sl:SelectionList ui:field="selectionList"/>
        </g:north>
        <g:center>
            <g:FlowPanel styleName="QueryHelpViewImpl-details max dashboard-panel dock-container-vertical">
                <g:FlowPanel styleName="QueryHelpViewImpl-buttons dock-min button-container">
                    <b:InlineSvgButton ui:field="insertButton" title="Insert" enabled="false"/>
                    <b:InlineSvgButton ui:field="copyButton" title="Copy" enabled="false"/>
                </g:FlowPanel>
                <g:SimplePanel ui:field="details" styleName="dock-max queryHelpDetail"/>
            </g:FlowPanel>
        </g:center>
    </g:ThinSplitLayoutPanel>
</ui:UiBinder>
