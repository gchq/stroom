<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:list="urn:import:stroom.item.client"
             xmlns:v="urn:import:stroom.widget.valuespinner.client"
             xmlns:view="urn:import:stroom.widget.tickbox.client.view"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max form">
        <form:FormGroup identity="searchDownloadFileType" label="File Type">
            <list:SelectionBox ui:field="fileType"/>
        </form:FormGroup>
        <form:FormGroup ui:field="downloadAll">
          <view:CustomCheckBox ui:field="downloadAllTables" identity="searchDownloadAllTables" label="Download All Tables"/>
        </form:FormGroup>
        <form:FormGroup>
            <view:CustomCheckBox ui:field="sample" identity="searchDownloadSampleOnly" label="Sample Only"/>
        </form:FormGroup>
        <form:FormGroup identity="searchDownloadSampleSize" label="Sample Size (%)">
            <v:ValueSpinner ui:field="percent"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder>
