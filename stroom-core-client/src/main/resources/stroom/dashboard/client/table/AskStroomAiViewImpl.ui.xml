<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:stroom.widget.button.client">
    <g:FlowPanel styleName="askStroomAiViewImpl max default-min-sizes dock-container-vertical">
        <g:SimplePanel ui:field="markdownPreview" styleName="dock-max markdown-container form-control"/>
        <g:FlowPanel styleName="dock-min askStroomAiViewImpl-bottom">
            <g:TextBox ui:field="message" addStyleNames="dock-max w-100"/>
            <b:Button ui:field="sendMessage" text="Send" addStyleNames="allow-focus Button--contained-primary"/>
            <b:Button ui:field="clearHistory" text="Clear" addStyleNames="allow-focus"/>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
