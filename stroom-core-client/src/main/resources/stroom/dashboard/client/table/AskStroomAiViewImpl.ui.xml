<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:stroom.widget.button.client"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max default-min-sizes dock-container-vertical">
        <g:DockLayoutPanel styleName="max default-min-sizes">
            <g:south size="32">
                <g:FlowPanel styleName="dock-max askStroomAiViewImpl-messageContainer">
                    <form:FormGroup identity="askStroomAiSearch" addStyleNames="dock-max">
                        <g:TextBox ui:field="message" addStyleNames="w-100" />
                    </form:FormGroup>
                    <b:Button ui:field="sendMessage" text="Send" addStyleNames="allow-focus Button--contained-primary" />
                    <b:Button ui:field="clearHistory" text="Clear" addStyleNames="allow-focus" />
                </g:FlowPanel>
            </g:south>
            <g:center>
                <g:SimplePanel ui:field="markdownPreview" styleName="max askStroomAiViewImpl-markdownPreview markdown-container"/>
            </g:center>
        </g:DockLayoutPanel>
    </g:FlowPanel>
</ui:UiBinder>
