<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:FlowPanel styleName="max default-min-sizes dock-container-vertical columnFunctionEditorViewImpl">
        <g:ThinSplitLayoutPanel styleName="dock-max columnFunctionEditorViewImpl-editorContainer form-control-border form-control-background">
            <g:west size="300">
                <g:SimplePanel ui:field="queryHelpContainer" styleName="max"/>
            </g:west>
            <g:center>
                <g:SimplePanel ui:field="editorContainer" styleName="dock-max"/>
            </g:center>
        </g:ThinSplitLayoutPanel>
        <g:FlowPanel addStyleNames="dock-min dock-container-horizontal columnFunctionEditorViewImpl-labelPanel">
            <g:HTML styleName="columnFunctionEditorViewImpl-completionLabel">
                <code>ctrl-space</code>
                for auto-completion
            </g:HTML>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
