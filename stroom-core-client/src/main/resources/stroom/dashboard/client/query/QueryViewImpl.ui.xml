<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:stroom.widget.button.client"
             xmlns:q="urn:import:stroom.query.client.view">
    <g:FlowPanel styleName="QueryViewImpl dock-max dock-container-vertical">
        <g:FlowPanel styleName="dock-min dock-container-horizontal QueryViewImpl--buttons">
            <b:ButtonPanel ui:field="buttonPanelLeft" addStyleNames="dock-max"/>
            <b:ButtonPanel ui:field="buttonPanelRight" addStyleNames="dock-min"/>
            <q:QueryButtons ui:field="queryButtons" addStyleNames="dock-min"/>
        </g:FlowPanel>
        <g:FlowPanel ui:field="expressionTree"
                     styleName="dock-max queryViewImpl-expressionTree">
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
