<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max form dock-container-vertical">
        <form:FormGroup identity="pathwayName" label="Name">
            <g:TextBox ui:field="name" addStyleNames="w-100"/>
        </form:FormGroup>
        <g:MySplitLayoutPanel styleName="dock-max">
            <g:north size="400">

                <g:MySplitLayoutPanel styleName="">
                    <g:west size="400">
                        <form:FormGroup identity="pathwayDetails" label="Paths">
                            <g:HTML ui:field="details" styleName="max form-control-background form-control-border"/>
                        </form:FormGroup>
                    </g:west>
                    <g:center>
                        <form:FormGroup identity="pathwayConstraints" label="Constraints">
                            <g:HTML ui:field="constraints" styleName="max form-control-background form-control-border"/>
                        </form:FormGroup>
                    </g:center>
                </g:MySplitLayoutPanel>

            </g:north>
            <g:center>

                <form:FormGroup identity="pathwayMatchingTraces" label="Spans">
                    <g:HTML ui:field="spans" styleName="max form-control-background form-control-border"/>
                </form:FormGroup>



            </g:center>
        </g:MySplitLayoutPanel>
    </g:FlowPanel>
</ui:UiBinder> 
