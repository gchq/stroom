<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max form-padding form">
        <form:FormGroup identity="xmlSchemaSettingsNamespaceURI" label="Namespace URI">
            <g:TextBox ui:field="namespaceURI" width="400px"/>
        </form:FormGroup>
        <form:FormGroup identity="xmlSchemaSettingSystemId" label="System Id">
            <g:TextBox ui:field="systemId" width="400px"/>
        </form:FormGroup>
        <form:FormGroup identity="xmlSchemaSettingSchemaGroup" label="Schema Group">
            <g:TextBox ui:field="schemaGroup" width="400px"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="deprecated" identity="xmlSchemaSettingDeprecated" label="Deprecated"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder>
