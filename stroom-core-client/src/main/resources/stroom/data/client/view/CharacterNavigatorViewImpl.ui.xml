<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:btn="urn:import:stroom.widget.button.client"
             xmlns:refresh-button="urn:import:stroom.data.pager.client">
    <g:FlowPanel styleName="characterNavigator">
        <g:FlowPanel styleName="characterNavigator-labels">
            <g:Label ui:field="lblLines"
                     styleName="characterNavigator-label"/>
            <g:Label ui:field="lblCharacters"
                     styleName="characterNavigator-label"/>
        </g:FlowPanel>
        <!--        <g:SimplePanel ui:field="progressBarPanel"-->
        <!--                       styleName="characterNavigator-progressBarPanel"/>-->
        <g:FlowPanel styleName="button-container">
            <btn:SvgButton ui:field="showHeadCharactersBtn"/>
            <btn:SvgButton ui:field="advanceCharactersBackwardBtn"/>
            <btn:SvgButton ui:field="advanceCharactersForwardBtn"/>
            <refresh-button:RefreshButton ui:field="refresh"/>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
