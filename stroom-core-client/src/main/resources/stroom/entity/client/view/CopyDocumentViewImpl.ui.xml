<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:l="urn:import:stroom.item.client">
    <ui:style>
        .label {
        margin-top: 2px;
        }

        .foldersOuter {
        margin-bottom: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="18">
            <g:Label text="Select the parent group:" addStyleNames="{style.label}"/>
        </g:north>
        <g:south size="20">
            <g:Grid styleName="stroom-control-grid" width="100%">
                <g:row>
                    <g:cell>Permissions:</g:cell>
                    <g:customCell>
                        <l:ItemListBox ui:field="permissionInheritance" width="100%"/>
                    </g:customCell>
                </g:row>
            </g:Grid>
        </g:south>
        <g:center>
            <g:SimplePanel ui:field="foldersOuter" styleName="{style.foldersOuter}">
                <g:SimplePanel ui:field="foldersInner" styleName="itemCheckList"
                               width="100%" height="100%"/>
            </g:SimplePanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
