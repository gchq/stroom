<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max form-page form">
        <form:FormGroup identity="createDocumentSelectParentGroup" label="Select the parent group"
                        addStyleNames="dock-max">
            <g:SimplePanel ui:field="foldersInner" styleName="dock-max"/>
        </form:FormGroup>
        <form:FormGroup identity="createDocumentName" label="Name" addStyleNames="dock-min">
            <g:TextBox ui:field="name" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="createDocumentPermissions" label="Permissions" addStyleNames="dock-min">
            <l:ItemListBox ui:field="permissionInheritance" addStyleNames="w-100"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder>
