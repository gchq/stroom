<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max form">
        <form:FormGroup identity="indexFieldType" label="Type">
            <l:SelectionBox ui:field="type" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="indexFieldName" label="Name">
            <g:TextBox ui:field="name" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="stored" identity="indexFieldStored" label="Stored"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="indexed" identity="indexFieldIndexed" label="Indexed"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="positions" identity="indexFieldPositions" label="Positions"/>
        </form:FormGroup>
        <form:FormGroup identity="indexFieldAnalyser" label="Analyser">
            <l:SelectionBox ui:field="analyser" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="caseSensitive" identity="indexFieldCaseSensitive" label="Case Sensitive"/>
        </form:FormGroup>
        <g:SimplePanel ui:field="denseVectorOptions"/>
    </g:FlowPanel>
</ui:UiBinder> 
