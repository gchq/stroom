<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view">
    <g:FlowPanel styleName="max form">
        <form:FormGroup identity="analyticStreamDestinationFeed" label="Destination Feed">
            <g:SimplePanel ui:field="destinationFeed"/>
        </form:FormGroup>
        <form:FormGroup identity="analyticStreamDestinationUseSourceFeedIfPossible" label="Use Source Feed If Possible (Streaming Only)">
            <tickbox:CustomCheckBox ui:field="useSourceFeedIfPossible"/>
        </form:FormGroup>

        <!-- includeRuleDocumentation determines whether the rule's documentation will be visible in detections produced by that rule. -->
        <form:FormGroup identity="includeRuleDocumentation" label="Include Rule Documentation">
            <tickbox:CustomCheckBox ui:field="includeRuleDocumentation"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder> 
