<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:ThinSplitLayoutPanel ui:field="outerSplitLayoutPanel"
                            unit="PX"
                            vSplits="0.5"
                            styleName="max">
        <g:north size="400">
            <g:SimplePanel ui:field="userList"
                           styleName="max"/>
        </g:north>
        <g:center>
            <g:ThinSplitLayoutPanel ui:field="innerSplitLayoutPanel"
                                    unit="PX"
                                    hSplits="0.5"
                                    styleName="max">
                <g:east size="400">
                    <g:SimplePanel ui:field="children"
                                   styleName="max"/>
                </g:east>
                <g:center>
                    <g:SimplePanel ui:field="parents"
                                   styleName="max"/>
                </g:center>
            </g:ThinSplitLayoutPanel>
        </g:center>
    </g:ThinSplitLayoutPanel>
</ui:UiBinder>
