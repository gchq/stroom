<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:stroom.widget.button.client"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:p="urn:import:stroom.widget.button.client">
    <g:FlowPanel styleName="askStroomAiViewImpl max default-min-sizes dock-container-vertical">
<!--        <form:FormGroup identity="dockTypeSelectionBox" label="Dock Type">-->
<!--            <l:SelectionBox ui:field="dockTypeSelectionBox"/>-->
<!--        </form:FormGroup>-->
<!--        <form:FormGroup identity="dockLocationSelectionBox" label="Dock Location">-->
