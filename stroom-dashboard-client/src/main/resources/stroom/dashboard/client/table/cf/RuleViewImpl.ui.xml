<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
>
    <ui:style>
        .top {
        width: 100%;
        height: 100%;
        background: white;
        border: 1px solid #c5cde2;
        }

        .bottom {
        width: 100%;
        height: 100%;
        padding-top: 5px;
        }

        .name {
        display: inline-block;
        }

        .optional {
        display: inline-block;
        margin-left: 5px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:south size="120">
            <g:SimplePanel styleName="{style.bottom}">
                <g:Grid ui:field="grid" styleName="stroom-control-grid" width="100%">
                    <g:row>
                        <g:cell>Hide:</g:cell>
                        <g:customCell>
                            <tickbox:TickBox ui:field="hide"/>
                        </g:customCell>
                    </g:row>
                    <g:row>
                        <g:cell>Background Color:</g:cell>
                        <g:customCell>
                            <g:TextBox ui:field="backgroundColor" width="100%"/>
                        </g:customCell>
                    </g:row>
                    <g:row>
                        <g:cell>Text Color:</g:cell>
                        <g:customCell>
                            <g:TextBox ui:field="textColor" width="100%"/>
                        </g:customCell>
                    </g:row>
                    <g:row>
                        <g:cell>Enabled:</g:cell>
                        <g:customCell>
                            <tickbox:TickBox ui:field="enabled"/>
                        </g:customCell>
                    </g:row>
                </g:Grid>
            </g:SimplePanel>
        </g:south>
        <g:center>
            <g:SimplePanel ui:field="expression" styleName="{style.top}"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>