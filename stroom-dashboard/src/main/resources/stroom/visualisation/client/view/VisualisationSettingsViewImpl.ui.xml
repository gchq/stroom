<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:v="urn:import:stroom.widget.layout.client.view">
  <ui:style>
    .settings {
    width: 100%;
    height: 100%;
    font-family: Courier New;
    font-size: 12px;
    white-space: pre;
    word-wrap: normal;
    }
  </ui:style>
  <v:ResizeSimplePanel styleName="stroom-control-page" width="100%" height="100%">
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
      <g:north size="132">
        <g:Grid styleName="stroom-control-grid">
          <g:row>
            <g:cell>Description:</g:cell>
            <g:customCell>
              <g:TextArea ui:field="description" width="400px" />
            </g:customCell>
          </g:row>
          <g:row>
            <g:cell>Function Name:</g:cell>
            <g:customCell>
              <g:TextBox ui:field="functionName" />
            </g:customCell>
          </g:row>
          <g:row>
            <g:cell>Script:</g:cell>
            <g:customCell>
              <g:SimplePanel ui:field="script" />
            </g:customCell>
          </g:row>
        </g:Grid>
      </g:north>
      <g:center>
        <g:DockLayoutPanel unit="PX" width="100%"
          height="100%">
          <g:north size="15">
            <g:Label text="Settings:" width="100%" />
          </g:north>
          <g:center>
            <g:TextArea ui:field="settings" addStyleNames="{style.settings}" />
          </g:center>
        </g:DockLayoutPanel>
      </g:center>
    </g:DockLayoutPanel>
  </v:ResizeSimplePanel>
</ui:UiBinder>
