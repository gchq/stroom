<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max form-padding form">
        <form:FormGroup identity="statisticsSettingsStatisticType" label="Statistic Type">
            <l:SelectionBox ui:field="statisticType"/>
        </form:FormGroup>
        <form:FormGroup identity="statisticsSettingsPrecision" label="Precision">
            <l:SelectionBox ui:field="precision"/>
        </form:FormGroup>
        <form:FormGroup identity="statisticsSettingsRollUpType" label="Roll Up Type">
            <l:SelectionBox ui:field="rollUpType"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="enabled" identity="statisticsSettingsEnabled" label="Enabled"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder>
